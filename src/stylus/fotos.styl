#header-fotos
  background #ea3800
  width 100%
  position fixed
  z-index 101
  h1
    text-align center
    font-size 28px
  div
    max-width 1024px
    margin 0 auto
    text-align center
    padding 1em 0 1em 0
  img
    width auto/9
    height auto
    max-width 5%

#submenu
  background #d53300
  width 100%
  height auto
  margin 0 auto
  display flex
  flex-wrap wrap
  justify-content space-around
  padding 70px 0 1em 0
  li
    border-radius 0 0 5px 5px
    border 1px solid #fff
    list-style none
    line-height 46px
    min-width 120px
    max-width 200px
    margin-bottom 10px
    &:hover
      background #ea3800
  a
    display block
    width 100%
    height 100%
    line-height 46px
    text-align center

.atras
  font-size 48px
  font-weight bolder
  line-height 30px
  padding 10px
  position fixed

.clearfix:before,
.clearfix:after
  content ''
  display table

.clearfix:after
  clear both

.grid-wrap
  clear both
  margin 0 auto
  padding 0
  max-width 1260px

.grid
  margin 30px auto
  padding 0
  list-style none
  min-height 500px

.js .grid
  background url("../img/load.gif") no-repeat 50% 100px

.js .grid.loaded
  background none

.grid li
  display inline-block
  overflow hidden
  width 314px
  text-align left
  vertical-align top

.js .grid li
  display none
  float left

.js .grid.loaded li
  display block

.title-box h1
  display block
  margin 7px
  padding 20px
  background #a92a02
  color #fff
  text-transform uppercase
  letter-spacing 1px

.title-box h1 a
  display block

.title-box h1:hover
  background #ea3800

.grid li > a,
.grid li img
  display block
  outline none
  border none

.grid li > a
  position relative
  overflow hidden
  margin 7px

.grid .curtain
  position absolute
  top 0
  left 0
  z-index 100
  width 100%
  height 100%
  background #a92a02

.grid.swipe-right .curtain
  -webkit-transform translate3d(-100%,0,0)
  transform translate3d(-100%,0,0)

.grid.swipe-down .curtain
  -webkit-transform translate3d(0,-100%,0)
  transform translate3d(0,-100%,0)

.grid.swipe-rotate .curtain
  width 200%
  height 200%
  transform rotate3d(0,0,1,90deg)
  transform-origin top left

.grid .curtain::after
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  background #ea3800
  content ''

.grid.swipe-right .curtain::after,
.grid.swipe-rotate .curtain::after
  left -100%

.grid.swipe-down .curtain::after
  top -100%

.grid li h3
  position absolute
  bottom 0
  left 0
  margin 0
  padding 20px
  width 100%
  background rgba(0,0,0,0.5)
  color #fff
  text-align right
  text-transform uppercase
  letter-spacing 1px
  font-weight normal
  font-size 1em
  transition color .2s,-webkit-transform .2s
  transition transform .2s,color .2s
  transition transform .2s,color .2s,-webkit-transform .2s

.grid li > a::before
  position absolute
  top 0
  left 0
  width 100.5%
  height 100.5%
  border 0 solid transparent
  background rgba(0,0,0,0)
  content ''
  transition border-width .2s,border-color .2s

.grid li.shown:hover h3
  transform translate3d(0,-30px,0)

.grid li.shown:hover > a::before
  border-width 14px
  border-color #fff

.grid.swipe-right li.animate .curtain
  animation swipeRight 1.5s cubic-bezier(.6,0,.4,1) forwards

.grid.swipe-down li.animate .curtain
  animation swipeDown 1.5s cubic-bezier(.6,0,.4,1) forwards

.grid.swipe-rotate li.animate .curtain
  animation swipeRotate 1.5s ease forwards

.grid li.animate .curtain::after
  animation fadeOut1 .5s ease forwards
  animation-delay inherit

.js .grid li img,
.js .grid li h3
  visibility hidden

.grid li.animate img,
.grid li.animate h3
  -webkit-animation showMe 1.5s step-end forwards
  animation showMe 1.5s step-end forwards

.grid li.shown img,
.grid li.shown h3
  visibility visible

@media only screen and (max-width:768px)
  #header-fotos img
    max-width 10%

  #submenu li
    margin-bottom: 10px

@media only screen and (max-width:480px)
  #header-fotos
    position relative

  #submenu
    padding 1em 0 1em 0
    display block

  #submenu li
    width 90%
    margin 20px auto

