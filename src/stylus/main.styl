/*reset styles*/
html,
body,
div,
span,
applet,
object,
iframe,
h1,
h2,
h3,
h4,
h5,
h6,
p,
blockquote,
pre,
a,
abbr,
acronym,
address,
big,
cite,
code,
del,
dfn,
em,
img,
ins,
kbd,
q,
s,
samp,
small,
strike,
strong,
sub,
sup,
tt,
var,
b,
u,
i,
center,
dl,
dt,
dd,
ol,
ul,
li,
fieldset,
form,
label,
legend,
table,
caption,
tbody,
tfoot,
thead,
tr,
th,
td,
article,
aside,
canvas,
details,
embed,
figure,
figcaption,
footer,
header,
hgroup,
menu,
nav,
output,
ruby,
section,
summary,
time,
mark,
audio,
video
  margin 0
  padding 0
  border 0
  font-size 100%
  vertical-align top
  outline 0
  text-rendering optimizeLegibility

*,
*:after,
*:before
  box-sizing border-box

:root
  font-size 16px
  --redLive hsl(14, 99%, 34%)
  --redVive hsl(14, 100%, 46%)
  --grayDark hsl(0, 0%, 20%)

a
  color #fff
  text-decoration none

body
  width 100%
  font-size 16px
  font-family Calibri,sans-serif,Helvetica,Arial
  color #fff
  font-variant-ligatures no-common-ligatures
  -webkit-font-variant-ligatures no-common-ligatures

.chromeframe
  color #fff
  background #000
  width 100%
  text-align center
  height 100%
  position fixed
  padding-top 100px
  z-index 10000

@-webkit-viewport
  width device-width

@-moz-viewport
  width device-width

@-ms-viewport
  width device-width

@viewport
  width device-width

/*animation*/
.anin-rapido
  transition all .2s ease-out

.anin-normal
  transition all .5s ease-out

.anin-lento
  transition all 1s ease-out

/*Main*/
#main
  background #fff
  width 100%
  height auto

.header
  background url("../img/main.jpg") center no-repeat var(--redLive) 
  padding 10rem 0 10rem 0
  background-size cover
  color #fff
  text-align center
  h1
    font-size 4.2rem
  h2
    font-weight normal
    font-size 2rem
    font-style italic
  img
    width auto/9
    height auto
    max-width 80%
    padding-bottom 1.5rem

/*Logo Animation*/
.slideDown
  animation-name slideDown
  animation-duration 1s
  animation-timing-function ease
  visibility visible !important

@keyframes slideDown
  0%
    transform translateY(-100%)
  50%
    transform translateY(8%)
  65%
    transform translateY(-4%)
  80%
    transform translateY(4%)
  95%
    transform translateY(-2%)
  100%
    transform translateY(0%)

/*Menu*/
#main-menu
  width 100%
  max-width 1024px
  margin 2.5rem auto
  #first-menu
    width 100%
    max-width 360px
    margin 0 auto
    height 3rem
    display flex
    flex-wrap wrap
    justify-content space-around
    li
      width 45%
      font-size 1.5rem
      border-radius 0 0 5px 5px
      border 1px solid #fff
      list-style none
      &:hover
        background var(--redVive) 
  a
    display block
    width 100%
    height 100%
    line-height 46px
    text-align center

/*Arrow Down*/
.arrow-down
  width 0
  margin 0 auto
  height 0
  border-left 20px solid transparent
  border-right 20px solid transparent
  border-top 20px solid #450901

/*Content*/
#content
  margin 0 auto
  width 100%
  max-width 1366px
  padding 2rem 0 2rem 0
  display flex
  flex-wrap wrap
  justify-content space-around
  #main-content
    width 45%
    margin 0 auto
    padding 2rem 0 2rem 0

#content-width-full
  margin 0 auto
  width 100%
  padding 3rem 0 2rem 0

#description
  font-size 1.5rem
  text-align center
  padding 1rem 0 1rem 0
  max-width 600px
  width 90%
  margin 0 auto
  color var(--grayDark) 

.banner
  background-color var(--grayDark)
  margin 0 auto
  background-image repeating-linear-gradient(45deg,transparent,transparent 35px,rgba(255,255,255,0.1) 35px,rgba(255,255,255,0.1) 70px)
  width 45%
  height auto
  text-align center
  padding 2rem 0 2rem 0
  text-shadow 4px 4px 4px rgba(0,0,0,0.1)
  p
    font-size 1.8rem
    color #fff
  span
    font-size 3rem

/*Banner Animation*/
.floating
  animation-name floating
  animation-duration 1.5s
  animation-iteration-count infinite

@keyframes floating
  0%
    transform translateY(0%)
  50%
    transform translateY(3%)
  100%
    transform translateY(0%)

#footer
  width 100%
  background var(--redLive)
  padding 2rem 0 0 0
  background-size cover

#logofooter
  width auto/9
  height auto
  max-width 10%
  display block
  margin 0 auto
  padding-bottom 1em

#uso
  width 90%
  margin 2rem auto
  text-align center
  max-width 1024px
  h4
    font-size 28px
    text-align center
    font-weight normal
    padding 0 0 1rem 0

#uso-leer
  display flex
  flex-wrap wrap
  justify-content space-around
  padding 1rem 0 2rem 0
  nav
    width 30%
  h5
    font-size 1.3rem
    text-align center
    margin-bottom 1rem
    font-weight bold
    text-transform uppercase
  ul
    width 90%
    margin 0 auto
  li
    line-height 1.8rem
    list-style none

#g
  margin 0 auto
  text-align center
  max-width 70px

/*Arrow Up*/
.arrow-up
  width 0
  margin 0 auto
  height 0
  border-left 20px solid transparent
  border-right 20px solid transparent
  border-bottom 20px solid #fff

footer
  margin 0 auto
  width 90%
  max-width 1366px
  padding 2rem 0 2rem 0
  img
    float left
    position relative
    top -15px
  p
    text-align right
    color var(--grayDark)
  a
    color var(--grayDark)

/*Responsive Desing*/
@media screen and (max-width:1366px)
  .header
    background url("../img/main-lap.jpg") center no-repeat

@media screen and (max-width:1024px)
  .header
    background url("../img/main-tab.jpg") center no-repeat
    padding 5rem 0 5rem 0

@media only screen and (max-width:768px)
  .header
    background url("../img/main-mob.jpg") center no-repeat

  #header-fotos img
    max-width 100%

  #description
    font-size 21px

@media only screen and (max-width:620px)
  #main-menu ul
    display block
    li
      width 80%
      margin .5rem auto

  #uso-leer
    display block
    nav
      width 100%
    ul
      margin 2rem auto

  #main-content
    padding 0 0 2rem 0
    iframe
      display none

  #logofooter
    max-width 30%

@media only screen and (max-width:480px)
  .header
    padding 4rem 0 4rem 0
    img
      max-width 30%
    h1
      font-size 50px
    h2
      font-size 21px

  .banner
    width 90%
    p
      font-size 21px

  .banner span,.down
    font-size 37px

  #content-width-full
    padding 0 0 2em 0

  .arrow-down
    border-top 20px solid #721a02

  #content
    display block

  #main-content
    width 90% !important