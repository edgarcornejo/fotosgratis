  text-decoration: none

body
  width: 100%
  font-size: 16px
  font-family: Calibri,sans-serif,Helvetica,Arial
  color: #fff
  font-variant-ligatures: no-common-ligatures
  -webkit-font-variant-ligatures: no-common-ligatures

.chromeframe
  color: #fff
  background: #000
  width: 100%
  text-align: center
  height: 100%
  position: fixed
  padding-top: 100px
  z-index: 10000

@-webkit-viewport
  width: device-width

@-moz-viewport
  width: device-width

@-ms-viewport
  width: device-width

@viewport
  width: device-width

.anin-rapido
  transition: all .2s ease-out

.anin-normal
  transition: all .5s ease-out

.anin-lento
  transition: all 1s ease-out

#main
  background: #fff
  width: 100%
  height: auto

.header
  background: url("../img/main.jpg") center no-repeat #a92a02
  padding: 10em 0 10em 0
  background-size: cover
  color: #fff
  text-align: center

.header h1
  font-size: 67px
  font-weight: normal

.header h2
  font-weight: normal
  font-size: 28px

.header img
  width: auto/9
  height: auto
  max-width: 80%
  padding-bottom: 1em

.slideDown
  animation-name: slideDown
  -webkit-animation-name: slideDown
  animation-duration: 1s
  -webkit-animation-duration: 1s
  animation-timing-function: ease
  -webkit-animation-timing-function: ease
  visibility: visible !important

#main-menu
  width: 100%
  max-width: 1024px
  margin: 1.5em auto

#first-menu
  width: 100%
  max-width: 360px
  margin: 0 auto
  height: 48px
  display: -webkit-flex
  display: -ms-flexbox
  display: flex
  -webkit-flex-wrap: wrap
  -ms-flex-wrap: wrap
  flex-wrap: wrap
  -webkit-justify-content: space-around
  -ms-flex-pack: distribute
  justify-content: space-around

#first-menu li
  width: 45%
  font-size: 1.5em
  border-radius: 0 0 5px 5px
  border: 1px solid #fff
  list-style: none
  line-height: 46px

#first-menu li:hover
  background: #ea3800

#first-menu a
  display: block
  width: 100%
  height: 100%
  line-height: 46px
  text-align: center

#content
  margin: 0 auto
  width: 100%
  max-width: 1366px
  padding: 2em 0 2em 0
  display: -webkit-flex
  display: -ms-flexbox
  display: flex
  -webkit-flex-wrap: wrap
  -ms-flex-wrap: wrap
  flex-wrap: wrap
  -webkit-justify-content: space-around
  -ms-flex-pack: distribute
  justify-content: space-around

#content-width-full
  margin: 0 auto
  width: 100%
  padding: 3em 0 2em 0

#main-content
  width: 45%
  margin: 0 auto
  padding: 2em 0 2em 0

#description
  font-size: 26px
  text-align: center
  padding: 1em 0 1em 0
  max-width: 600px
  width: 90%
  margin: 0 auto
  color: #484848

.banner
  background-color: #484848
  margin: 0 auto
  background-image: repeating-linear-gradient(45deg,transparent,transparent 35px,rgba(255,255,255,0.1) 35px,rgba(255,255,255,0.1) 70px)
  width: 45%
  height: auto
  text-align: center
  padding: 2em 0 2em 0

.banner p
  font-size: 28px
  color: #fff

.banner span
  font-size: 50px

.floating
  animation-name: floating
  -webkit-animation-name: floating
  animation-duration: 1.5s
  -webkit-animation-duration: 1.5s
  animation-iteration-count: infinite
  -webkit-animation-iteration-count: infinite

@keyframes floating
  0%
    -webkit-transform: translateY(0%)
  50%
    -webkit-transform: translateY(3%)
  100%
    -webkit-transform: translateY(0%)
.arrow-down
  width: 0
  margin: 0 auto
  height: 0
  border-left: 20px solid transparent
  border-right: 20px solid transparent
  border-top: 20px solid #450901

.arrow-up
  width: 0
  margin: 0 auto
  height: 0
  border-left: 20px solid transparent
  border-right: 20px solid transparent
  border-bottom: 20px solid #fff

#footer
  width: 100%
  background: #a92a02
  padding: 2em 0 0 0
  background-size: cover

#uso
  width: 90%
  margin: 2em auto
  text-align: center
  max-width: 1024px

#uso h4
  font-size: 28px
  text-align: center
  font-weight: normal
  padding: 0 0 1em 0

#g
  margin: 0 auto
  text-align: center
  max-width: 70px

#logofooter
  width: auto/9
  height: auto
  max-width: 10%
  display: block
  margin: 0 auto
  padding-bottom: 1em

#uso-leer
  display: -webkit-flex
  display: -ms-flexbox
  display: flex
  -webkit-flex-wrap: wrap
  -ms-flex-wrap: wrap
  flex-wrap: wrap
  -webkit-justify-content: space-around
  -ms-flex-pack: distribute
  justify-content: space-around
  padding: 1em 0 2em 0

#uso-leer nav
  width: 30%

#uso-leer h5
  font-size: 21px
  text-align: center
  margin-bottom: 1em
  font-weight: bold
  text-transform uppercase

#uso-leer ul
  width: 90%
  margin: 0 auto

#uso-leer li
  line-height: 30px
  list-style: none

footer
  margin: 0 auto
  width: 90%
  max-width: 1280
  padding: 2em 0 2em 0

footer img
  float: left
  position: relative
  top: -15px

footer p
  text-align: right
  font-size: 16px
  color: #484848

footer a
  color: #484848

@media screen and (max-width:1366px)
  .header
    background: url("../img/main-lap.jpg") center no-repeat

@media screen and (max-width:1024px)
  .header
    background: url("../img/main-tab.jpg") center no-repeat
    padding: 5em 0 5em 0

@media only screen and (max-width:768px)
  .header
    background: url("../img/main-mob.jpg") center no-repeat

  #header-fotos img
    max-width: 100%

  #description
    font-size: 21px

@media only screen and (max-width:620px)
  #main-menu ul
    display: block

  #main-menu ul li
    width: 80%
    margin: .5em auto

  #uso-leer
    display: block

  #uso-leer nav
    width: 100%

  #uso-leer ul
    margin: 2em auto

  #main-content
    padding: 0 0 2em 0

  #main-content iframe
    display: none

  #logofooter
    max-width: 30%

@media only screen and (max-width:480px)
  .header
    padding: 4em 0 4em 0

  .header img
    max-width: 30%

  .header h1
    font-size: 50px

  .header h2
    font-size: 21px

  .banner p
    font-size: 21px

  .banner span
    font-size: 37px

  .banner .down
    font-size: 37px

  #content-width-full
    padding: 0 0 2em 0

  .arrow-down
    border-top: 20px solid #721a02

  #content
    display: block

  #main-content,
  .banner
    width: 90%

